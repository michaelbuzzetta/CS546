<h2>Sign In</h2>
<form id="signin-form" action="/signinuser" method="POST">
  <label for="user_id">User ID:</label>
  <input type="text" id="user_id" name="userId">
  
  <label for="password">Password:</label>
  <input type="password" id="password" name="password">
  
  {{#if error}}
    <p class="error" style="color: red;">{{error}}</p>
  {{else}}
    <p class="error" style="color: red; display: none;"></p>
  {{/if}}
  
  <button type="submit">Sign In</button>
</form>
<p><a href="/signupuser">Don't have an account? Sign Up</a></p>
<script src="/public/js/form_validate.js"></script>


